<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:alignmentMode="alignBounds"
        android:layout_height="match_parent"
        android:rowCount="6"
        android:columnCount="4"
        android:columnOrderPreserved="false"
        android:padding="0dp"
        android:layout_gravity="fill"
        >

        <!-- Row 0 -->

        <TextView
            android:id="@+id/valorMain"
            android:layout_columnSpan="4"
            android:layout_row="0"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:text="0"
            android:textSize="60sp"
            android:textAlignment="gravity"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="right"

            />

        <!--Row 1-->
        <TextView
            android:id="@+id/cleanMain"
            style="@style/AppTheme.BotonCalculadora.Fin"
            android:layout_columnSpan="3"
            android:layout_row="0"
            android:text="AC"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal"
            />

        <TextView
            android:id="@+id/masMain"
            style="@style/AppTheme.BotonCalculadora.Op"
            android:layout_column="3"
            android:layout_row="1"
            android:text="+"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

        <!--Row 2-->

        <TextView
            android:id="@+id/sieteMain"
            style="@style/AppTheme.BotonCalculadora.Num"
            android:layout_column="0"
            android:layout_row="2"
            android:text="7"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/ochoMain"
            style="@style/AppTheme.BotonCalculadora.Num"
            android:layout_column="1"
            android:layout_row="2"
            android:text="8"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/nueveMain"
            style="@style/AppTheme.BotonCalculadora.Num"
            android:layout_column="2"
            android:layout_row="2"
            android:text="9"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/menosMain"
            style="@style/AppTheme.BotonCalculadora.Op"
            android:layout_column="3"
            android:layout_row="2"
            android:text="-"
            android:layout_gravity="fill_horizontal"

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

        <!-- Row 2 -->
        <TextView
            android:id="@+id/cuatroMain"
            style="@style/AppTheme.BotonCalculadora.Num"
            android:layout_column="0"
            android:layout_row="3"
            android:text="4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/cincoMain"
            style="@style/AppTheme.BotonCalculadora.Num"
            android:layout_column="1"
            android:layout_row="3"
            android:text="5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/seisMain"
            style="@style/AppTheme.BotonCalculadora.Num"
            android:layout_column="2"
            android:layout_row="3"
            android:text="6"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/porMain"
            style="@style/AppTheme.BotonCalculadora.Op"
            android:layout_column="3"
            android:layout_row="3"
            android:text="x"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal"
            />

        <!--Row 3-->
        <TextView
            android:id="@+id/unoMain"
            style="@style/AppTheme.BotonCalculadora.Num"
            android:layout_column="0"
            android:layout_row="4"
            android:text="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/dosMain"
            style="@style/AppTheme.BotonCalculadora.Num"
            android:layout_column="1"
            android:layout_row="4"
            android:text="2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/tresMain"
            style="@style/AppTheme.BotonCalculadora.Num"
            android:layout_column="2"
            android:layout_row="4"
            android:text="3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/entreMain"
            style="@style/AppTheme.BotonCalculadora.Op"
            android:layout_column="3"
            android:layout_row="4"
            android:text="/"
            android:layout_gravity="fill_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

        <!--Row 4-->
        <TextView
            android:id="@+id/puntoMain"
            style="@style/AppTheme.BotonCalculadora.Num"
            android:layout_column="0"
            android:layout_row="5"
            android:text="."
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/ceroMain"
            style="@style/AppTheme.BotonCalculadora.Num"
            android:layout_column="1"
            android:layout_row="5"
            android:text="0"
            android:layout_gravity="fill_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/igualMain"
            style="@style/AppTheme.BotonCalculadora.Fin"
            android:layout_columnSpan="2"
            android:layout_row="5"
            android:text="="
            android:layout_gravity="fill_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

    </GridLayout>

</LinearLayout>