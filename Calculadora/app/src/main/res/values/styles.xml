<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <!--Para los botones-->
    <style name="AppTheme.NumerosCalculadora" parent="TextAppearance.AppCompat.Headline">
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">43dp</item>
        <item name="android:paddingHorizontal">43dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.BotonCalculadora.Num" parent="AppTheme.NumerosCalculadora">
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="AppTheme.BotonCalculadora.Op" parent="AppTheme.NumerosCalculadora">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.BotonCalculadora.Fin" parent="AppTheme.NumerosCalculadora">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="AppTheme.NumerosCalculadoraLandscape" parent="TextAppearance.AppCompat.Headline">
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">15dp</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.BotonCalculadoraLandscape.Num" parent="AppTheme.NumerosCalculadoraLandscape">
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:paddingHorizontal">75dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="AppTheme.BotonCalculadoraLandscape.Op" parent="AppTheme.NumerosCalculadoraLandscape">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:paddingHorizontal">50dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.BotonCalculadoraLandscape.Fin" parent="AppTheme.NumerosCalculadoraLandscape">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:paddingHorizontal">50dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
